/* pages/home/home.wxss */

.outercont {
    width: 98vw;
    margin: 0 auto;
}

.outerbox {
    background-color: gray;
}

.title {
    font-size: 50rpx;
    padding: 15rpx 0;
    color: white;
}

.list {
    display: flex;
    justify-content: space-between;
}

.list view {
    width: 140rpx;
    background-color: lightgray;
    font-size: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-weight: 900;
    box-sizing: border-box;
    border-radius: 10rpx;
}

.hoverd {
    background-color: gray;
    color: yellow;
    border-bottom: 4px solid snow;
}

.showbox {
    margin-top: 20rpx;
    width: 100vw;
    height: 300rpx;
    background-color: gray;
    text-align: center;
    line-height: 300rpx;
    font-size: 50rpx;
    margin-bottom: 12rpx;
}

.showbox view {
    border-radius: 20rpx;
    background-color: lightgray;
}

swiper {
    display: block;
    height: 400rpx;
    margin-bottom: 12rpx;
}

image.slide-image {
    width: 100%;
    height: 400rpx;
    border-radius: 10rpx;
}




